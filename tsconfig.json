{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@helpers/*": ["src/core/helpers/*"],
      "@models/*": ["src/core/models/*"],
      "@vocabs/*": ["src/core/vocabularies/*"],
      "@todo/*": ["src/todo/*"],
    }
  },
  "exclude": [
    "./node_modules/",
    "./dist/"
  ],
}
