{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@helpers/*": ["src/core/helpers/*"],
      "@models/*": ["src/core/models/*"],
      "@vocabs/*": ["src/core/vocabularies/*"],
      "@todo/*": ["src/todo/*"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ],
}
